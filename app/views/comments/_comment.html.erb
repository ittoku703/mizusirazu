<div class="p-2 border-b border-amber-500">
  <div class="flex items-start space-x-4">
    <%= image_tag(comment.user.profile.display_avatar, size: '50x50') %>
    <div class="space-y-4">
      <ul class="flex items-center space-x-2 text-sm">
        <%= content_tag(:li, comment.user.name, class: 'font-bold')%>
        <%= content_tag(:li, comment.created_at, class: 'text-gray-400') %>
      </ul>
      <div>
        <%= simple_format(comment.content) %>
      </div>
    </div>
  </div>

  <% if current_user?(comment.user) %>
    <div class="p-2">
      <%= render 'comments/edit_form', comment: comment %>
    </div>
  <% end %>
</div>
