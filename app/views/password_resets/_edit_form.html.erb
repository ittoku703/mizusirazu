<%= form_with model: @user, url: password_reset_path(params[:id]), method: :patch do |f| %>
  <%= render 'shared/form_errors', object: f.object %>
  <%= hidden_field_tag :email, @user.email %>
  <%= password_reset_form_field(f, :password, t('.password')) %>
  <%= password_reset_form_field(f, :password_confirmation, t('.password_confirmation')) %>
  <%= password_reset_form_submit(f, t('.submit')) %>
<% end %>
