<div class="w-full bg-amber-300 px-4 border-b border-orange-500">
  <div class="my-1 flex justify-between items-center">
    <%= site_logo %>

    <div>
      <h1>Mizusirazu.net</h1>
    </div>

    <div class="relative inline-block">
      <div>
        <button type="button" class="inline-flex justify-center w-full px-4 py-2 text-gray-500" data-action="click->application#headerUserToggle" data-application-target="userBtn">
          <span><%= logged_in? ? 'User' : 'Welcome' %></span>
          <%= render 'modules/bottom_allow' %>
        </button>
      </div>
      <div class="hidden arrow-top z-10 absolute right-0 mt-2 w-48 rounded shadow bg-lime-500" data-application-target="userList" tabindex="-1">
        <div class="py-1 text-sm">
        <%= header_link_to('User list', users_path()) %>
        <%= header_link_to('Micropost list', microposts_path()) %>
          <% if logged_in? %>
            <%= header_link_to(current_user.name, user_path(current_user)) %>
            <%= header_link_to('Create Micropost', new_micropost_path()) %>
            <%= header_link_to('Settings', edit_user_path()) %>
            <%= header_link_to('Profiles', edit_user_profile_path()) %>
            <%= header_link_to('Log out', session_path(), data: { turbo_method: :delete }) %>
          <% else %>
            <%= header_link_to('Confirms', new_account_activation_path()) %>
            <%= header_link_to('Forget password', new_password_reset_path()) %>
            <%= header_link_to('Sign up', new_user_path()) %>
            <%= header_link_to('Log in', new_session_path()) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
