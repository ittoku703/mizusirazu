<% provide(:title, t('.title')) %>
<% provide(:name_or_email, defined?(name_or_email) ? name_or_email : '') %>

<div class="max-w-md mx-auto p-4 space-y-4">
  <div class="p-4 bg-gray-400 rounded-xl shadow text-center">
    <div class="inline-block bg-sky-600 border border-gray-500 rounded-full p-2">
      <%= site_logo(size: '100x100') %>
    </div>
    <div class="text-xl pb-2 border-b border-gray-500 mb-4">
      <%= yield(:title) %>
    </div>
    <div class="text-sm">
      <%= render 'form' %>
    </div>
  </div>
  <%= render 'providers/links' %>
</div>
